<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
    </android.support.v7.widget.Toolbar>

    <!--<android.support.design.widget.AppBarLayout-->
    <!--android:id="@+id/appBarLayout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">-->

    <!--<android.support.v7.widget.Toolbar-->
    <!--android:id="@+id/toolBar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="?attr/actionBarSize"-->
    <!--android:background="?attr/colorPrimary"-->
    <!--android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
    <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />-->

    <!--</android.support.design.widget.AppBarLayout>-->

    <ImageView
        android:id="@+id/backgroundPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="165dp" />

    <include
        android:id="@+id/loading_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/guidelineh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        layout="@layout/loading_weather"
        />

    <ImageButton
        android:id="@+id/weather_cityhome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintTop_toTopOf="@+id/toolBar"
        app:layout_constraintBottom_toTopOf="@+id/guidelineh"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_home"
        />

    <TextView
        android:id="@+id/weather_cityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="上海"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="@+id/toolBar"
        app:layout_constraintBottom_toTopOf="@+id/guidelineh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.507"
        />

    <TextView
        android:id="@+id/weather_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="2018.03.25 20.21"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/toolBar"
        app:layout_constraintBottom_toTopOf="@+id/guidelineh"
        app:layout_constraintStart_toEndOf="@+id/weather_cityname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.8"
        />

    <TextView
        android:id="@+id/weather_degree_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26 C"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="39sp"
        app:layout_constraintTop_toTopOf="@+id/guidelineh"
        app:layout_constraintLeft_toRightOf="@+id/weather_cityhome"
        />

    <TextView
        android:id="@+id/weather_weather_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:text="晴"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="39sp"
        app:layout_constraintTop_toTopOf="@+id/guidelineh"
        app:layout_constraintStart_toEndOf="@+id/weather_degree_now"
        />

    <!--<android.support.v4.widget.SwipeRefreshLayout-->
        <!--android:id="@+id/swipe_refresh"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@+id/guidelineh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/forecast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="预报"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <include
                    android:id="@+id/forecast_day1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    layout="@layout/forecast_item"
                    />

                <include
                    android:id="@+id/forecast_day2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    layout="@layout/forecast_item"
                    />

                <include
                    android:id="@+id/forecast_day3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    layout="@layout/forecast_item"
                    />

                <ImageView
                    android:id="@+id/image_bgup"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@android:color/background_light"
                    android:textSize="8sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/aqi_index"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="AQI Index"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <include
                    android:id="@+id/aqi_index_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    layout="@layout/aqi_item"
                    />

                <include
                    android:id="@+id/aqi_index_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    layout="@layout/aqi_item"
                    />

                <ImageView
                    android:id="@+id/image_bgdown"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@android:color/background_light"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:background="@android:color/background_light" />

                <TextView
                    android:id="@+id/life_suggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="生活建议"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/life_suggestions_content_comf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="舒适度"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/life_suggestions_content_sport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="室内运动"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/life_suggestions_content_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="适合洗车"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

            </LinearLayout>
        </ScrollView>
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->

</android.support.constraint.ConstraintLayout>