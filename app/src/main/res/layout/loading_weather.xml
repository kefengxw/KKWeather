<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_weather"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_orange_light"
        android:indeterminate="true"
        android:progressBackgroundTint="@android:color/holo_green_light"
        android:progressTint="@android:color/holo_purple"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/progressBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Loading the data..."
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/failInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Failed to load the data..."
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="32dp" />

</LinearLayout>